<!-- views/post.handlebars -->

{{!-- Include the main layout --}}
{{> layouts/main}}

{{!-- Define the content for this page --}}
{{#each posts}}
  <div class="post">
    <h2>{{title}}</h2>
    <p>{{content}}</p>
    <p>By {{User.username}} on {{createdAt}}</p>
    <!-- Add comment section if needed -->
    <h3>Comments:</h3>
    {{#each comments}}
      <div class="comment">
        <p>{{content}}</p>
        <p>By {{User.username}} on {{createdAt}}</p>
      </div>
    {{/each}}
    <!-- Add form for adding new comment -->
    <form id="commentForm" action="/comment/{{id}}" method="POST">
      <div class="form-group">
        <label for="commentContent">Add a comment:</label>
        <textarea id="commentContent" name="content" rows="4" required></textarea>
      </div>
      <div class="form-group">
        <button type="submit">Submit Comment</button>
      </div>
    </form>
  </div>
{{/each}}